<Window x:Class="Stepman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stepman"
        mc:Ignorable="d"
        Title="MainWindow" Height="602" Width="800">
    <Grid x:Name="Stepman" Margin="5,0,0,29">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="221*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnSignIn" Content="Sign In" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" Height="26" Width="117" Click="btnSignIn_Click" Grid.Column="2"/>
        <ComboBox x:Name="SolutionsComboBox" Grid.ColumnSpan="3" HorizontalAlignment="Left" Margin="14,99,0,0" VerticalAlignment="Top" Width="300" SelectionChanged="ComboBox_SelectionChanged" Grid.Column="1" Height="22"/>
        <Label x:Name="Label_solution" Grid.Column="2" Content="Solution" HorizontalAlignment="Center" Margin="0,73,0,0" VerticalAlignment="Top" RenderTransformOrigin="-5.264,-4.236" Width="118" FontWeight="Bold" Height="26">
            <UIElement.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </UIElement.RenderTransform>
        </Label>
        <ComboBox x:Name="StepsComboBox" Grid.Column="1" HorizontalAlignment="Left" Margin="14,162,0,0" VerticalAlignment="Top" Width="730" Grid.ColumnSpan="3" SelectionChanged="ComboBox_SelectionChanged_1" Height="22"/>
        <Label x:Name="Label_step" Grid.Column="2" Content="Plugin Step" HorizontalAlignment="Left" Margin="1,128,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.027,0.002" Grid.ColumnSpan="2" Width="300" FontWeight="Bold" Height="26"/>
        <DataGrid x:Name="StepAttributes" d:ItemsSource="{d:SampleData ItemCount=5}" Background="#FFF0F0F0" Grid.ColumnSpan="3" Margin="14,242,431,143" Grid.Column="1">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Select"/>
                <DataGridTextColumn Header="Attribute"/>
            </DataGrid.Columns>
        </DataGrid>
        <ComboBox Grid.Column="3" HorizontalAlignment="Left" Margin="253,244,0,0" VerticalAlignment="Top" Width="375" Height="22"/>
        <Label x:Name="Lable_Images" Grid.Column="3" Content="Image" HorizontalAlignment="Left" Margin="258,213,0,0" VerticalAlignment="Top" Width="120" FontWeight="Bold" Height="26"/>
        <Label Grid.Column="2" Content="Step Attributes" HorizontalAlignment="Left" Margin="0,209,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.79,0.002" Grid.ColumnSpan="2" Width="330" FontWeight="Bold" Height="26"/>
        <Button Grid.Column="2" Content="Save" HorizontalAlignment="Left" Margin="10,434,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="110" Height="25" FontWeight="Bold"/>
        <Button Grid.Column="3" Content="Reset" HorizontalAlignment="Left" Margin="28,434,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.505,0.253" Width="135" Height="25" FontWeight="Bold"/>
        <Button Grid.Column="2" Content="Export XML" HorizontalAlignment="Left" Margin="10,474,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="260" Height="25" FontWeight="Bold"/>

    </Grid>
</Window>
